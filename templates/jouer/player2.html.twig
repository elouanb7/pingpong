{% extends 'base.html.twig' %}

{% block title %}PingPong - NewGame - Joueur 1{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-5">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">
                            Joueur 1 :
                        </h1>
                        <p class="card-text">
                            {{ form_start(formD) }}
                            {{ form_widget(formD.player) }}
                            <button type="submit" class="btn btn-success mt-3 btn-block" disabled>Valider</button>
                            {{ form_end(formD) }}
                            Le joueur 1 sélectionné : {{ player1.firstName }} {{ player1.lastName }}
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <h1 class="text-center">VS</h1>
            </div>
            <div class="col-5">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">
                            Joueur 2 :
                        </h1>
                        <p class="card-text">
                            {{ form_start(form) }}
                            {{ form_widget(form.player) }}
                            <button type="submit" class="btn btn-success mt-3 btn-block">Valider</button>


                            {{ form_end(form) }}
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}


