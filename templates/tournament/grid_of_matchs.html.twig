{% extends 'base.html.twig' %}

{% block title %}PingPong - Tournament {{ tournament.id }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Grille des matchs :</h1>
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Matchs à jouer :</h5>
                                <hr>
                                <div class="card-text">
                                    {% for round in range(1,rounds) %}
                                        {{ round }}
                                    {% endfor %}
                                    <h6>Matchs de Demi</h6>
                                    <div class="list-group {{ games|length>3 ? "dashboard" : "" }}">
                                        {% for game in games %}
                                            <div class="list-group-item list-group-item-action">
                                                <div class="row">
                                                    <div class="col-md-9 ">
                                                        <a class="text-decoration-none" href="{# {{ path('detail',{'id':ticket.id}) }} #}">
                                                            <h5 class="mb-1">
                                                                {% set show = 1 %}
                                                                {% for jouer in jouers %}
                                                                    {% if jouer.game == game %}
                                                                        {% if jouer.isWinner == true and show == 1 %}
                                                                            <span class="badge badge-secondary"><i class="fas fa-crown"></i></span>
                                                                        {% endif %}
                                                                        {{ jouer.player.fullName }}
                                                                        {% if jouer.isWinner == true and show == 0 %}
                                                                            <span class="badge badge-secondary"><i class="fas fa-crown"></i></span>
                                                                        {% endif %}
                                                                        {% set show = show+1 %}
                                                                    {% endif %}
                                                                    {% if show == 2 %}
                                                                        <span class="badge badge-secondary">VS</span>
                                                                        {% set show = 0 %}
                                                                    {% endif %}
                                                                {% endfor %}
                                                                ( {{ game.scoreP1 }} - {{ game.scoreP2 }} )
                                                            </h5>
                                                        </a>

                                                        {# <p class="mb-1">{{ ticket.description  | u.truncate(50, '...', false) }}</p> #}
                                                        {# <small>Posté par <a
                                                                        href="{{ path('profil',{'id':ticket.user.id}) }}">{{ ticket.user.firstName }} {{ ticket.user.lastName }}</a>
                                                            </small> #}

                                                    </div>

                                                    <div class="col-md-3">
                                                        <div class="col-md-12 text-right">
                                                            {% set date = game.playedAt | date %}
                                                            <small class="">{{ date|ago }}</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-4"></div>
                    <div class="col-4"></div>
                </div>
                <p class="card-text">
                </p>
            </div>
        </div>
    </div>
{% endblock %}

