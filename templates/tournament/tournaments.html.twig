{% extends 'base.html.twig' %}

{% block title %}PingPong - Liste des tournois{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card alert-info">
            <div class="card-body">
                <h1 class="card-title">Liste des tournois :</h1>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-text">
                                    <div class="list-group">
                                        {% for tournament in pagination %}
                                            <div class="list-group-item list-group-item-action">
                                                <div class="row">
                                                    <div class="col-md-6 ">
                                                        <a href="{{ path('gridT',{'id':tournament.id}) }}">
                                                            <h5 class="mb-1">
                                                                Tournoi n°{{ tournament.id }}
                                                            </h5>
                                                        </a>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="col-md-12 text-right">
                                                            {% if tournament.finishedAt != null %}
                                                                <h5><span class="badge badge-pill badge-danger">Terminé</span>
                                                                </h5>
                                                            {% else %}
                                                                <h5><span class="badge badge-pill badge-info">En cours</span>
                                                                </h5>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="col-md-12 text-right">
                                                            {% set date = tournament.createdAt | date %}
                                                            <small class="">{{ date|ago }}</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">{{ knp_pagination_render(pagination) }}</div>
{% endblock %}
