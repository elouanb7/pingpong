{% extends 'base.html.twig' %}

{% block title %}PingPong - {{ player1.fullName }} VS {{ player2.fullName }}{% endblock %}


{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-5">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">
                            {{ player1.fullName }}
                        </h1>
                        <p class="card-text">
                            {{ form_start(form) }}
                            {{ form_widget(form.scoreP1) }}

                        </p>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <h1 class="text-center">VS</h1>
            </div>
            <div class="col-5">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">
                            {{ player2.fullName }}
                        </h1>
                        <p class="card-text">
                            {{ form_widget(form.scoreP2) }}

                        </p>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success mt-3 btn-block">Valider</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}