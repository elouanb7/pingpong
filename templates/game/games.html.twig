{% extends 'base.html.twig' %}

{% block title %}PingPong - Liste des matchs{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card alert-success">
            <div class="card-body">
                <h1 class="card-title">Liste des matchs :</h1>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-text">
                                    <div class="list-group">
                                        {% for game in pagination %}
                                            <div class="list-group-item list-group-item-action">
                                                <div class="row">
                                                    <div class="col-md-9 ">
                                                        <a class="text-decoration-none"
                                                           href="{{ path('detail',{'id':game.id}) }}">
                                                            <h5 class="mb-1">
                                                                {% set show = 1 %}
                                                                {% for jouer in jouers %}
                                                                    {% if jouer.game == game %}
                                                                        {% if jouer.isWinner == true and show == 1 %}
                                                                            <span class="badge badge-secondary"><i
                                                                                        class="fad fa-crown"></i></span>
                                                                        {% endif %}
                                                                        {{ jouer.player.fullName }}
                                                                        {% if jouer.isWinner == true and show == 0 %}
                                                                            <span class="badge badge-secondary"><i
                                                                                        class="fad fa-crown"></i></span>
                                                                        {% endif %}
                                                                        {% set show = show+1 %}
                                                                    {% endif %}
                                                                    {% if show == 2 %}
                                                                        <span class="badge badge-secondary">VS</span>
                                                                        {% set show = 0 %}
                                                                    {% endif %}
                                                                {% endfor %}
                                                                ( {{ game.scoreP1 }} - {{ game.scoreP2 }} )
                                                            </h5>
                                                        </a>

                                                        {# <p class="mb-1">{{ ticket.description  | u.truncate(50, '...', false) }}</p> #}
                                                        {# <small>Post√© par <a
                                                                        href="{{ path('profil',{'id':ticket.user.id}) }}">{{ ticket.user.firstName }} {{ ticket.user.lastName }}</a>
                                                            </small> #}

                                                    </div>

                                                    <div class="col-md-3">
                                                        <div class="col-md-12 text-right">
                                                            {% set date = game.playedAt | date %}
                                                            <small class="">{{ date|ago }}</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">{{ knp_pagination_render(pagination) }}</div>
{% endblock %}
